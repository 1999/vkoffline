{
	"name" : "__MSG_appName__ DEV",
	"version" : "4.11",
	"description" : "__MSG_appDescription__",
	"default_locale" : "ru",
	"icons" : {
		"128" : "pic/icon128.png",
		"48" : "pic/icon48.png",
		"16" : "pic/icon16.png"
	},
	"app" : {
		"launch" : {
			"local_path" : "main.html"
		}
	},

	"content_scripts": [
		{
			"matches": ["*://vk.com/*"],
			"js": ["content_scripts/external.js"]
		}
	],

	"manifest_version" : 2,
	"content_security_policy" : "script-src 'self' https://api-maps.yandex.ru https://ssl.google-analytics.com; object-src 'self'",
	"web_accessible_resources": [
		"pic/icon48.png",
		"pic/smile.png"
	],
	"background": {
		"scripts": [
			"bower_components/lodash/dist/lodash.min.js",
			"bower_components/vow/vow.min.js",
			"bower_components/sklad/sklad.js",
			"js/app.js",
			"js/utils.js",
			"js/soundManager.js",
			"js/storageManager.js",
			"js/accountsManager.js",
			"js/databaseManager.js",
			"js/settingsManager.js",
			"js/logManager.js",
			"js/cacheManager.js",
			"js/reqManager.js",
			"js/migrationManager.js",
			"js/backend.js",
			"js/counter.js"
		]
	},
	"offline_enabled" : true,
	"minimum_chrome_version" : "33",
	"permissions" : [
		"alarms",
		"background",
		"unlimitedStorage",
		"storage",
		"tabs",
		"notifications",
		"*://*.vk.com/*",
		"*://*.userapi.com/*",
		"*://*.vk.me/*"
	],
	"optional_permissions" : [
		"management",
		"clipboardWrite"
	]
}
